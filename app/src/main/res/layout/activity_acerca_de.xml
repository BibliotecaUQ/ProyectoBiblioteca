<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_weight="0.4" /-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:id="@+id/titleabout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textSize="@dimen/detalle_texto_nombre"
                android:textColor="@color/colorPrimaryDark"
                android:typeface="serif"
                android:text="Paseo Virtual"
                />
            <TextView
                android:id="@+id/autor_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:typeface="serif"
                android:textStyle="bold"
                android:maxLines="30"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/tamanio_texto_detalle" />
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:maxLines="30"
                android:gravity="center"
                android:textSize="@dimen/tamanio_texto_detalle" />
            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:maxLines="30"
                android:gravity="center"
                android:textSize="@dimen/tamanio_texto_detalle"
                android:textColor="@color/colorSecondaryText"/>
            <TextView
                android:id="@+id/creada_anio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:maxLines="30"
                android:gravity="center"
                android:textSize="@dimen/tamanio_texto_detalle" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
